 {% block head %}
    <title>LOOK Accessories</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <link rel="stylesheet" href={{ asset('bundles/lookapp/css/style.css') }} />
  <link rel="stylesheet" href={{ asset('bundles/framework/css/body.css') }} />
  {% endblock %}
  
  {% block body %}
  
  <div id="wrap">
    <div class="header">
      <div class="logo"><img src={{ asset('bundles/lookapp/img/logo.jpg') }} alt="" border="0" /></div>
      <div id="menu">
        <ul>
          {% if not menu_selected is defined %}
            {% set menu_selected = 'home' %}
          {% endif %}
          <li {% if menu_selected == 'home' %} class="selected" {% endif %}> <a href="/">Home</a> </li>
          <li {% if menu_selected == 'products' %} class="selected" {% endif %}> <a href="products">Products</a> </li>
          <li {% if menu_selected == 'about' %} class="selected" {% endif %}> <a href="about">About</a> </li>
          <li {% if menu_selected == 'register' %} class="selected" {% endif %}> <a href="register">Register</a> </li>
          <li {% if menu_selected == 'login' %} class="selected" {% endif %}> <a href="login">Login</a> </li>
        </ul>

        <div id="menu_right" style="float:right">
          {{ include('LookAppBundle:components:user_area_component.html.twig') }}
        </div>
      </div>
    </div>
  
  {% block columns %}
    <div align=center><img src={{ asset('bundles/lookapp/img/body.jpg') }} /></div>
  {% endblock %}
  </div>
  
 {% endblock %}
