{% form_theme form 'LookAppBundle:Form:custom_form_layout.html.twig' %}
{% extends 'LookAppBundle::look_layout_center.html.twig' %}

{% block title %} Update Product {% endblock %}

{% set menu_selected = 'admin' %}

{% block content %}

    <div class="form_wrapper">
    <form action="{{ path('update_product', { 'product_id' : product_id }) }}" method="POST" id="update_product_form">
        {{ form_errors(form) }}

        <div class="form_row"><h2>Update product</h2></div>
        
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
        {{ form_row(form.category) }}
        {{ form_row(form.stock) }}
        {{ form_row(form.brand) }}
        {{ form_row(form.description) }}

        {{ form_rest(form) }}
        <input type="submit" value="Update" class="symfony-button-grey" />
    </form>
    </div>

{% endblock %}
