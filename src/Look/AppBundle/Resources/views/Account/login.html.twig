{% extends 'LookAppBundle::look_layout_center.html.twig' %}

{% block title %} Login {% endblock %}

{% block content %}

    <div class="form_wrapper">
    
        <form action="{{ path('account_login') }}" method="POST">
            {{ form_errors(form) }}
            
            <div class="form_row"> {{ form_row(form.username) }} </div>
            <div class="form_row"> {{ form_row(form.password) }} </div>
            
            {{ form_rest(form) }}
            <input type="submit" value="Login" class="" />
        </form>
        
    </div>

{% endblock %}
