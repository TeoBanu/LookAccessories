{% form_theme form 'LookAppBundle:Form:custom_form_layout.html.twig' %}
{% extends 'LookAppBundle::look_layout_center.html.twig' %}

{# initialize variables #}
{% set menu_selected = 'login' %}

{% block title %} Login {% endblock %}

{% block content %}

    <div class="form_wrapper">
    
        <form action="{{ path('account_login') }}" method="POST">
            {{ form_errors(form) }}
            
			<div class="form_row"><h2>Login</h2></div>
			
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            
            {{ form_rest(form) }}
            <input type="submit" value="Login" class="" />
        </form>
        
    </div>

{% endblock %}
